<%= form_for(@micropost) do |f| %>
  <%= render  'devise/shared/micropost_error', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>